<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Basic white textview -->
    <style name="WhiteTextViewTheme">
        <item name="android:fontFamily">@font/vertigo</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
    </style>

    <!-- Widget textview style -->
    <style name="WidgetTextViewStyle">
        <item name="android:fontFamily">@font/vertigo</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <!-- Progressbar style -->
    <style name="ViewPagerProgressBarStyle">
        <item name="android:color">@color/colorWhite</item>
        <item name="android:colorEdgeEffect">@color/cardview_dark_background</item>
    </style>

    <!-- Base theme -->
    <style name="Theme.App"
           parent="Theme.AppCompat.Light.NoActionBar">
        <item name="primaryButtonTheme">
            @style/Widget.Button.Primary
        </item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/vertigo</item>
        <item name="android:textSize">25sp</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@color/primaryText</item>
        <item name="buttonNormalColor">@color/buttonNormal</item>
        <item name="buttonHighlightColor">@color/buttonHighlight</item>
        <item name="buttonTextColor">@color/buttonText</item>

        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <!-- Light theme -->
    <style name="Theme.App.Light" parent="Theme.App">
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightColorPrimaryDark</item>
        <item name="primaryTextColor">@color/lightPrimaryText</item>
        <item name="secondaryTextColor">@color/lightSecondaryText</item>
        <item name="colorAccent">@color/lightColorAccent</item>

        <!-- configs -->
        <item name="android:navigationBarColor">@color/lightColorPrimaryDark</item>
        <item name="android:statusBarColor">@color/lightColorPrimaryDark</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/lightPrimaryText</item>
        <item name="android:windowBackground">@color/lightColorPrimaryDark</item>
        <item name="android:dropDownItemStyle">@style/myDropDownItemStyle</item>
        <item name="android:dropDownListViewStyle">@style/myDropDownListViewStyleLight</item>

        <item name="primaryButtonTheme">
            @style/Widget.Button.Primary
        </item>
    </style>

    <!-- Dark theme -->
    <style name="Theme.App.Dark" parent="Theme.App">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="primaryTextColor">@color/darkPrimaryText</item>
        <item name="secondaryTextColor">@color/darkSecondaryText</item>
        <item name="colorAccent">@color/darkColorAccent</item>

        <!-- configs -->
        <item name="android:textColorSecondary">@color/darkSecondaryText</item>
        <item name="android:navigationBarColor">@color/darkColorPrimaryDark</item>
        <item name="android:statusBarColor">@color/darkColorPrimaryDark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColor">@color/darkPrimaryText</item>
        <item name="android:windowBackground">@color/darkColorPrimaryDark</item>
        <item name="android:dropDownItemStyle">@style/myDropDownItemStyle</item>
        <item name="android:dropDownListViewStyle">@style/myDropDownListViewStyleDark</item>
        <item name="android:textColorAlertDialogListItem">@color/darkSecondaryText</item>



        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>


        <item name="android:colorBackgroundFloating">
            @color/darkColorPrimaryDark</item>
        <item name="colorBackgroundFloating">@color/darkColorPrimaryDark</item>
        <item name="android:editTextColor">@color/darkSecondaryText</item>



        <item name="primaryButtonTheme">
            @style/Widget.Button.Primary
        </item>
    </style>

    <!-- Custom widgets -->
    <style name="myDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/secondary_text_default_material_light</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="myDropDownListViewStyleLight" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@color/lightColorPrimaryDark</item>
    </style>

    <style name="myDropDownListViewStyleDark" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@color/darkColorPrimaryDark</item>
    </style>

    <style name="Widget.Button.Primary"
           parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">?attr/buttonNormalColor</item>
        <item name="android:foregroundTint">@color/colorWhite</item>
        <item name="colorControlHighlight">
            ?attr/buttonHighlightColor
        </item>
        <item name="android:textColor">?attr/buttonTextColor</item>
    </style>
</resources>
