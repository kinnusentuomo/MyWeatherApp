<resources>

    <!-- Base application theme. Theme.AppCompat.Light.DarkActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>


    <!-- Basic white textview -->
    <style name="WhiteTextViewTheme">
        <item name="android:fontFamily">@font/vertigo</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
    </style>





    <!-- Widget textview style -->
    <style name="WidgetTextViewStyle">
        <item name="android:fontFamily">@font/vertigo</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">textStart</item>
    </style>



    <!-- Progressbar style -->
    <style name="ViewPagerProgressBarStyle">
        <item name="android:color">@color/colorWhite</item>
        <item name="android:colorEdgeEffect">@color/cardview_dark_background</item>
    </style>
</resources>
