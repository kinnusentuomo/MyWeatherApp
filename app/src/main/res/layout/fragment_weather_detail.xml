<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".WeatherDetailFragment">

    <com.tuomomees.myweatherapplication.CustomTextView
            app:customFont="vertigo.ttf"
            style="@style/WhiteTextViewTheme"
            android:textSize="55sp"
            android:textAlignment="center"
            android:id="@+id/textViewCity"
            android:hint="City"
            android:layout_width="200dp"
            android:layout_height="78dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextCity" android:layout_marginStart="104dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="104dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.01"/>

    <ImageView
            android:layout_width="374dp"
            android:layout_height="156dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/imageViewWeatherIcon" android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>

    <com.tuomomees.myweatherapplication.CustomTextView
            app:customFont="vertigo.ttf"
            android:textSize="120sp"
            style="@style/WhiteTextViewTheme"
            android:id="@+id/textViewTemperature"
            android:textAlignment="center"
            android:hint="25Â°C"
            android:layout_width="189dp"
            android:layout_height="162dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewWeatherIcon"/>

    <com.tuomomees.myweatherapplication.CustomTextView
            app:customFont="vertigo.ttf"
            style="@style/WhiteTextViewTheme"
            android:hint="Rainy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewWeather"
            app:layout_constraintStart_toEndOf="@+id/textViewTemperature"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewWeatherIcon"/>
    <com.tuomomees.myweatherapplication.CustomTextView
            app:customFont="vertigo.ttf"
            style="@style/WhiteTextViewTheme"
            android:hint="90%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHumidity"
            app:layout_constraintStart_toEndOf="@+id/textViewTemperature"
            android:layout_marginStart="36dp" android:layout_marginLeft="36dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewWeather"/>
    <com.tuomomees.myweatherapplication.CustomTextView
            app:customFont="vertigo.ttf"
            style="@style/WhiteTextViewTheme"
            android:hint="6.5m/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewWindSpeed"
            app:layout_constraintTop_toBottomOf="@+id/textViewHumidity"
            app:layout_constraintStart_toEndOf="@+id/textViewTemperature" android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp" android:layout_marginTop="4dp"/>
</android.support.constraint.ConstraintLayout>