<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             tools:context=".WeatherDetailFragment">

    <TextView
            style="@style/WhiteTextViewTheme"
            android:textSize="55sp"
            android:textAlignment="center"
            android:id="@+id/textViewCity"
            android:hint="City"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextCity"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
    />

    <LinearLayout
            android:layout_marginTop="88dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageViewLayout"
            android:layout_width="match_parent"
            android:layout_height="156dp">
    <ImageView
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/imageViewWeatherIcon"

            />
    </LinearLayout>

    <TextView

            android:textSize="120sp"
            style="@style/WhiteTextViewTheme"
            android:id="@+id/textViewTemperature"
            android:textAlignment="center"
            android:hint="25Â°C"
            android:layout_width="189dp"
            android:layout_height="162dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewLayout"/>

    <TextView
            style="@style/WhiteTextViewTheme"
            android:hint="Rainy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewWeather"
            app:layout_constraintStart_toEndOf="@+id/textViewTemperature"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewLayout"/>
    <TextView
            style="@style/WhiteTextViewTheme"
            android:hint="90%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHumidity"
            app:layout_constraintStart_toEndOf="@+id/textViewTemperature"
            android:layout_marginStart="36dp" android:layout_marginLeft="36dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewWeather"/>
    <TextView
            style="@style/WhiteTextViewTheme"
            android:hint="6.5m/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewWindSpeed"
            app:layout_constraintTop_toBottomOf="@+id/textViewHumidity"
            app:layout_constraintStart_toEndOf="@+id/textViewTemperature" android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp" android:layout_marginTop="4dp"/>
</android.support.constraint.ConstraintLayout>