<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal">

    <TextView

            android:fontFamily="@font/vertigo"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_marginLeft="5dp"
            android:id="@+id/textViewListText"
            android:textSize="30sp"
            android:textColor="@color/colorWhite" android:layout_marginStart="5dp"/>

    <ImageView
    android:layout_gravity="end"
    android:layout_width="40sp" android:layout_height="40sp"
    android:id="@+id/imageViewListIcon"
    />
</LinearLayout>