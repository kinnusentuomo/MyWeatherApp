<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorAccent">

    <EditText
            android:textSize="25sp"
            style="@style/WhiteTextViewTheme"
            android:id="@+id/editTextCity"
            android:layout_width="208dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="Input city name"
            android:ems="10"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"/>

    <Button
            style="@android:style/Widget.Holo.Button"
            android:onClick="sendQueryWithCity"
            android:text="Search"
            android:layout_width="166dp"
            android:layout_height="47dp"
            android:id="@+id/button" app:layout_constraintStart_toEndOf="@+id/editTextCity"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_height="619dp"
            android:layout_width="415dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextCity" app:layout_constraintStart_toStartOf="parent"
    />


</android.support.constraint.ConstraintLayout>