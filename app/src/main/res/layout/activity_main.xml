<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        tools:actionBarNavMode="tabs"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/raindrop_bg">

    <EditText
            android:textSize="25sp"
            style="@style/WhiteTextViewTheme"
            android:id="@+id/editTextCity"
            android:layout_width="208dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="Input city name"
            android:ems="10"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"/>

    <Button
            style="@android:style/Widget.Holo.Button"
            android:onClick="sendQueryWithCity"
            android:text="Search"
            android:layout_width="135dp"
            android:layout_height="0dp"
            android:id="@+id/button" app:layout_constraintStart_toEndOf="@+id/editTextCity"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v4.view.ViewPager
            android:background="@drawable/weather_detail_fragment_background"
            android:id="@+id/viewPager"
            android:layout_height="466dp"
            android:layout_width="359dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="104dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editTextCity"
            app:layout_constraintVertical_bias="0.078"/>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigationView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/colorBackground"
            android:backgroundTint="@color/cardview_dark_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:itemBackground="@color/cardview_dark_background"
            app:itemIconTint="@color/colorWhite"
            app:itemTextColor="@color/colorWhite"
            app:menu="@menu/bottom_navigation_bar_menu"/>


</android.support.constraint.ConstraintLayout>