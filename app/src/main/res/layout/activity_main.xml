<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorAccent">

    <TextView
            style="@style/WhiteTextViewTheme"
            android:textSize="35sp"
            android:textAlignment="center"
            android:id="@+id/textViewCity"
            android:hint="City name here"
            android:layout_width="194dp"
            android:layout_height="53dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextCity" android:layout_marginStart="108dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="108dp"/>

    <TextView
            android:textSize="70sp"
            style="@style/WhiteTextViewTheme"
            android:id="@+id/textViewTemperature"
            android:hint="Temperature here"
            android:layout_width="189dp"
            android:layout_height="162dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewWeatherIcon"/>

    <EditText
            style="@style/WhiteTextViewTheme"
            android:id="@+id/editTextCity"
            android:layout_width="208dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="Input city name"
            android:ems="10"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button

            android:onClick="sendQueryWithCity"
            android:text="Search"
            android:layout_width="166dp"
            android:layout_height="47dp"
            android:id="@+id/button" app:layout_constraintStart_toEndOf="@+id/editTextCity"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            style="@style/WhiteTextViewTheme"
            android:hint="Weather here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewWeather"
            app:layout_constraintStart_toEndOf="@+id/textViewTemperature"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewWeatherIcon"/>
    <TextView
            style="@style/WhiteTextViewTheme"
            android:hint="Humidity here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHumidity"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewWeather"
            app:layout_constraintStart_toEndOf="@+id/textViewTemperature" android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"/>
    <TextView
            style="@style/WhiteTextViewTheme"
            android:hint="Wind here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewWindSpeed"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewHumidity"
            app:layout_constraintStart_toEndOf="@+id/textViewTemperature" android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"/>
    <ImageView
            android:layout_width="374dp"
            android:layout_height="156dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/imageViewWeatherIcon" android:layout_marginTop="192dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>


</android.support.constraint.ConstraintLayout>